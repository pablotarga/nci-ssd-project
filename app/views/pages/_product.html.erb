
<div class="col-12 col-md-6 col-lg-4 col-xl-3">
  <div class="product card">
    <%= image_tag 'placeholder.png', alt: product.title, class: 'card-img' %>
    <div class="card-img-overlay d-flex justify-content-end">
      <a href="#" class="card-link text-danger like">
        <i class="fas fa-heart"></i>
      </a>
    </div>
    <div class="card-body d-flex flex-column">
      <h4 class="card-title"><%= product.title %></h4>

      <h6 class="card-subtitle mb-2">
        <% if product.in_stock? %>
        <span class="text-success"><%= t('product.in_stock') %></span>
        <% else %>
        <span class="text-danger"><%= t('product.out_stock') %></span>
        <% end %>
      </h6>

      <p class="card-text">
        <%= product.description %>
      </p>

      <div class="tags">
        <span class="badge badge-info">PS4</span>
        <span class="badge badge-info">Action</span>
        <span class="badge badge-info">Single Player</span>
      </div>

      <div class="buy d-flex justify-content-between align-items-center mt-auto">
        <div class="price <%= product.in_stock? ? 'text-success' : 'text-muted' %>">
          <h5 class="mt-4"><%= number_to_currency product.price %></h5>
        </div>
        <% if product.in_stock? %>
          <a href="#" class="btn btn-danger mt-3"><i class="fas fa-shopping-cart"></i> <%= t('shared.add_to_cart')%></a>
        <% end %>
      </div>
    </div>
  </div>
</div>
