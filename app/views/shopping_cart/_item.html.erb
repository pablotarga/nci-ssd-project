<div class="col-12" id="shopping-cart-item-<%= item.id %>">
  <div class="card mb-3">


    <div class="card-body d-flex flex-column">
      <div class="row">

        <div class="col-8">
          <%= image_tag 'placeholder.png', alt: item.product.title %>
          <%= item.product.title%>
        </div>

        <div class="col-2">
          <%= link_to update_shopping_cart_path(item.product, 'product[quantity]' => item.quantity-1), method: :put, remote: true do %>
            <i class="fas fa-minus-square"></i>
          <% end %>
          <%= content_tag :span, item.quantity, class: 'mx-2' %>
          <%= link_to update_shopping_cart_path(item.product, 'product[quantity]' => item.quantity+1), method: :put, remote: true do %>
            <i class="fas fa-plus-square"></i>
          <% end %>
        </div>

        <div class="col-2 text-right">
          <%= number_to_currency (item.product.price*item.quantity) %>
          <%= link_to destroy_shopping_cart_path(item.product), class: 'ml-2', method: :delete, data: {confirm: 'Are you sure?'} do %>
            <i class="fas fa-times-circle"></i>
          <% end %>
        </div>



      </div>
    </div>
  </div>
</div>
