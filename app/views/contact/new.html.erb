<h2> <%= t('.title') %> </h2><br>
<dt> <%= t('.description')%> </dt><br>

<div class="container-content">
    <div class="container">
        <%= form_tag(contact_path) do %>
            <div class="form-group">
                <%= label_tag 'contact[name]', 'Name' %>
                <%= text_field_tag 'contact[name]', nil, class: 'form-control', placeholder: 'Your Name' %>
            </div>
           <div class="form-group">
               <%= label_tag 'contact[email]', 'Email' %>
               <%= email_field_tag 'contact[email]', nil, class: 'form-control', placeholder: 'Your Email Address' %>
           </div>
           <div class="form-group">
               <%= label_tag 'contact[message]', 'Message' %>
               <%= text_area_tag 'contact[message]', nil, class: 'form-control', rows: 4, placeholder: 'Message' %>
           </div>
           <%= submit_tag nil, class: 'btn btn-default btn-about pull-right' %>
       <% end %>
  </div>
</div>
